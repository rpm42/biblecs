<script type="text/ng-template" id="page-view">
  <a class="back" href="/{{bookId}}">Back</a>
  <section class="page">
    <h2>Глава {{chapter}}</h2>
    <ol class="verses-list">
      <li ng-repeat="verse in verses"><p class="csl">{{verse}}</p></li>
    </ol>
  </section>
  <a class="prev" ng-if="chapter > 1" href="/{{bookId}}/{{chapter-1}}">Prev</a>
  <a class="back" href="/{{bookId}}">Back</a>
  <a class="next" href="/{{bookId}}/{{chapter+1}}">Next</a>
</script>